package arrays;

public class ArrayGugudan {
	public static void main(String[] args) {
		int dan = 3;
	
		for (int i=1; i<10; i++) {
			System.out.println(dan + " X " + i + " = " + dan*i);
		}
		
		System.out.println("===============================");
		
		//배열을 사용하여 구구단 저장 및 출력
		int[] gugudan = new int[9];
		//gugudan[0] = dan * 1;
		//System.out.println(gugudan[0]);
		
		
		for (int i=0; i<10; i++) {
			gugudan[i] = dan * (i+1);
			System.out.println(dan + " X " + (i+1) + " = " + gugudan[i]);
		}
		
	}
}
